{
  "name": "rita",
  "version": "2.0.0-beta.10",
  "author": "Daniel C. Howe",
  "license": "GPL-3.0",
  "description": "RiTa: A toolkit for natural language and computational literature",
  "homepage": "https://rednoise.org/rita",
  "files": [
    "lib/rita.js"
  ],
  "main": "lib/rita.js",
  "scripts": {
    "npmpub": "np --tag beta prerelease",
    "bump": "yarn version --no-git-tag-version --prerelease",
    "bump.version": "yarn version --no-git-tag-version --patch",
    "build": "webpack --display-modules && ls -l lib",
    "build.prod": "webpack --display-modules --mode production && ls -l lib",
    "watch": "webpack --watch",
    "test": "mocha",
    "test.g": "mocha ./test/*.js -g ",
    "test.grammar": "mocha ./test/riscript-tests.js",
    "test.issues": "mocha ./issues/known-issues.js",
    "test.quick": "mocha './test/**/!(lexicon-tests).js'",
    "test.prod": "NODE_ENV=dist mocha ./test/*.js",
    "test.watch": "mocha --watch 'src/*.js' './test/**/!(lexicon-tests).js'",
    "watch.grammar": "npm-watch",
    "compile": "yarn antlr4.js",
    "antlr4.js": "java -Xmx500M -cp 'jlib/antlr-4.8-complete.jar' org.antlr.v4.Tool -Dlanguage=JavaScript -lib grammar -o grammar/.antlr -visitor -Xexact-output-dir grammar/RiScript.g4",
    "antlr4.java": "java -Xmx500M -cp '/usr/local/lib/antlr-4.7.1-complete.jar:$CLASSPATH' org.antlr.v4.Tool -Dlanguage=Java -lib grammar -o grammar/.antlr -visitor -Xexact-output-dir grammar/RiScript.g4"
  },
  "watch": {
    "compile": {
      "patterns": "grammar",
      "extensions": "g4"
    }
  },
  "dependencies": {
    "@types/antlr4": "^4.7.0",
    "antlr4": "^4.7.2",
    "deepmerge": "^4.2.2",
    "flatted": "^2.0.2",
    "he": "^1.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.4",
    "@types/webpack": "^4.41.0",
    "chai": "^4.2.0",
    "eslint": "^6.7.2",
    "eslint-loader": "^3.0.3",
    "mocha": "^6.2.2",
    "npm-watch": "^0.6.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  }
}
