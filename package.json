{
  "name": "rita-script",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test mocha ./tests/*.js",
    "test-api": "NODE_ENV=test mocha ./tests/rita-api.js",
    "test-rita": "NODE_ENV=test mocha ./tests/rita-tests.js",
    "test-grammar": "NODE_ENV=test mocha ./tests/riscript-tests.js",
    "watch": "npm-watch",
    "compile": "npm run antlr4-js",
    "antlr4-js": "java -Xmx500M -cp '/usr/local/lib/antlr-4.7.1-complete.jar:$CLASSPATH' org.antlr.v4.Tool -Dlanguage=JavaScript -lib grammar -o lib -visitor -Xexact-output-dir grammar/RiScript.g4"
  },
  "watch": {
    "compile": {
      "patterns": "grammar",
      "extensions": "g4"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/chai": "^4.2.4",
    "antlr4": "^4.7.2",
    "he": "^1.2.0",
    "js-levenshtein": "^1.1.6"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "colors": "^1.3.3",
    "mocha": "^6.1.4",
    "npm-watch": "^0.6.0"
  }
}
